{
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "off",
    "react-hooks/exhaustive-deps": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  },
  "overrides": [
    {
      "files": ["app/**/*.{ts,tsx}"],
      "excludedFiles": ["app/api/**"],
      "rules": {
        "no-restricted-imports": ["error", {
          "paths": [{ "name": "@/lib/env", "message": "server-only: クライアントから import しないでください" }]
        }]
      }
    }
  ]
}
